# Environment variables for development
# Copy this file to .env.local and fill in your values

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Upvave Portfolio"

# Supabase Configuration
# Get these from your Supabase project dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Database (Prisma - for local development if needed)
DATABASE_URL="postgresql://username:password@localhost:5432/upvave_portfolio"

# Authentication (if needed)
# NEXTAUTH_SECRET=""
# NEXTAUTH_URL=""

# API Keys (if needed)
# NEXT_PUBLIC_API_KEY=""

# Optional: For local Supabase development
# SUPABASE_DB_PASSWORD=your_local_db_password